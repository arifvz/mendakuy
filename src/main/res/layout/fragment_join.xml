<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/bg100">

        <ImageView
            android:id="@+id/iv_mount"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_mountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_mount"
            android:text="Mount"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mountName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_mount"
            android:hint="How Many Hikes?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_mount"
            android:text="Submit" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>